@model Wedding

<div class="row align-items-center mb-4">
    <div class="col">
        <h1 class="text-light">Plan Your Wedding</h1>
    </div>   
    <div class="d-flex col justify-content-end">
        <a asp-action="Dashboard" asp-controller="Wedding" class="mr-2 d-inline-block btn btn-primary">Dashboard</a> 
        <a asp-action="Logout" asp-controller="Home" class="d-inline-block btn btn-danger">Log Out</a>
    </div>
</div>
<div class="row justify-content-between">
    <div class="col-5 text-center">
        <img src="https://www.pinclipart.com/picdir/big/22-225403_married-couple-png-clipart-png-wedding-clipart-transparent.png" width="350" class="rounded mb-3" alt="">
    </div>
    <div class="col pr-5">
        <form asp-action="Create" asp-controller="Wedding" method="post">
            <div class="form-group">
                <h5 class="text-light mb-0"><label asp-for="WedderOne"></label></h5>
                <span class="text-danger" asp-validation-for="WedderOne"></span>
                <input asp-for="WedderOne" class="form-control">
            </div>
            <div class="form-group">
                <h5 class="text-light mb-0"><label asp-for="WedderTwo"></label></h5>
                <span class="text-danger" asp-validation-for="WedderTwo"></span>
                <input asp-for="WedderTwo" class="form-control">
            </div>
            <div class="form-group">
                <h5 class="text-light mb-0"><label asp-for="Date"></label></h5>
                <span class="text-danger" asp-validation-for="Date"></span>
                <input type="date" asp-for="Date" class="form-control">
            </div>
            <div class="form-group">
                <h5 class="text-light mb-0"><label asp-for="Address"></label></h5>
                <span class="text-danger" asp-validation-for="Address"></span>
                <input asp-for="Address" class="form-control">
            </div>
            <input type="submit" value="Create" class="btn btn-primary btn-lg">
        </form>

    </div>
</div>